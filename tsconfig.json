{
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/index.ts",
    "frappe/**/*.ts",
    "frappe/**/*.d.ts",
    "frappe/**/*.tsx",
    "frappe/**/*.vue",
    "frappe/index.js",
    "frappe/index.d.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": ["src/**/*.cy.ts"],
  "extends": "./tsconfig.base.json",
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
